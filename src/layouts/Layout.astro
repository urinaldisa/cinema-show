---
import "../styles/global.css";
const { title = "Cinema Website" } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh bg-white text-slate-900 py-5">
    <slot />
  </body>
</html>

<style is:global>
  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
